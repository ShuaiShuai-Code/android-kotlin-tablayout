<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/img_adapter_ask"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/iv_icon"
                android:layout_alignRight="@+id/img_adapter_ask"
                android:layout_alignBottom="@+id/img_adapter_ask"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ask_expert_11"
                android:contentDescription="@null"
                android:visibility="gone"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/text_adapter_ask_name"
                style="@style/text_small_1_gray_28"/>
            <TextView
                android:id="@+id/text_adapter_ask_time"
                android:layout_marginTop="3dp"
                style="@style/text_small_3_gray_98"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/img_ask_jian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:src="@mipmap/ask_jian"/>
        <TextView
            android:id="@+id/txt_ask_zan"
            android:text="11"
            android:gravity="center_vertical"
            android:drawablePadding="5dp"
            style="@style/text_small_4_gray_98"
            android:textColor="@color/color_000000"
            android:layout_marginTop="2dp"
            android:layout_height="30dp"/>
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/animation_view"
            android:layout_width="35dp"
            android:layout_height="35dp"
            app:lottie_fileName="data_1.json"
            app:lottie_loop="false"
            app:lottie_autoPlay="true"
            android:layout_alignParentRight="true"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/img_adapter_ask_gone"
                android:layout_width="45dp"
                android:layout_height="1dp"
                android:visibility="invisible"/>
        </RelativeLayout>
        <TextView
            android:id="@+id/text_adapter_ask_content"
            android:layout_marginTop="10dp"
            android:ellipsize="end"
            android:layout_marginLeft="10dp"
            style="@style/text_small_1_gray_28"
            android:text="问题"
            android:layout_width="match_parent"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_photo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="45dp"
                android:layout_height="1dp"
                android:visibility="invisible"/>
        </RelativeLayout>
        <ImageView
            android:id="@+id/img_adapter_ask_photo"
            android:layout_marginTop="10dp"
            android:ellipsize="end"
            android:layout_marginLeft="5dp"
            style="@style/text_small_1_gray_28"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:scaleType="centerCrop"
            android:layout_marginBottom="@dimen/h_10dp"/>
    </LinearLayout>
    <include android:id="@+id/comment_instru"
        android:visibility="gone"
        layout="@layout/commten_child_item_heard"></include>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="49dp"
        android:background="@drawable/bg_round_comment_child">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/ls_child_comment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:footerDividersEnabled="false"
            android:divider="@color/gray_list_bg"
            tools:listitem="@layout/adapter_child_comment">
        </androidx.recyclerview.widget.RecyclerView>
    </LinearLayout>



</LinearLayout>
